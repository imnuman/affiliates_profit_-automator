# Application
APP_NAME=ClickBank Affiliate SaaS
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
API_VERSION=v1

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/clickbank_saas
DATABASE_ECHO=False  # Set to True to see SQL queries

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300  # 5 minutes default

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ClickBank
CLICKBANK_API_KEY=your-clickbank-api-key-here
CLICKBANK_DEVELOPER_KEY=your-clickbank-developer-key-here
CLICKBANK_CLERK_KEY=your-clickbank-clerk-key-here

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Price IDs for subscription tiers
STRIPE_PRICE_STARTER=price_starter_id_here
STRIPE_PRICE_PROFESSIONAL=price_professional_id_here
STRIPE_PRICE_AGENCY=price_agency_id_here

# Email - Postmark (Transactional)
POSTMARK_API_KEY=your-postmark-api-key-here
POSTMARK_FROM_EMAIL=noreply@yourcompany.com

# Email - SendGrid (Marketing)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=hello@yourcompany.com

# SMS - Twilio (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_CONTENT=clickbank-saas-content
AWS_S3_BUCKET_UPLOADS=clickbank-saas-uploads
AWS_S3_BUCKET_BACKUPS=clickbank-saas-backups

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
BETTER_STACK_SOURCE_TOKEN=your-better-stack-token

# Frontend
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_STARTER=100/hour
RATE_LIMIT_PROFESSIONAL=500/hour
RATE_LIMIT_AGENCY=2000/hour

# Feature Flags
FEATURE_SMS_NOTIFICATIONS=False
FEATURE_WHITE_LABEL=True
FEATURE_API_ACCESS=True

# Tier Limits
STARTER_CONTENT_LIMIT=50
STARTER_CAMPAIGNS_LIMIT=1
STARTER_STORAGE_GB=5

PROFESSIONAL_CONTENT_LIMIT=200
PROFESSIONAL_CAMPAIGNS_LIMIT=10
PROFESSIONAL_STORAGE_GB=50

AGENCY_CONTENT_LIMIT=999999
AGENCY_CAMPAIGNS_LIMIT=999999
AGENCY_STORAGE_GB=500
